<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/user_tv_first_char"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/background_user_icon"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textAllCaps="true"
        android:textColor="@color/colorTextIcons"
        android:textSize="@dimen/_22sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/user_view_divider"/>

    <View
        android:id="@+id/user_view_supporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_tv_first_char"
        app:layout_constraintStart_toEndOf="@+id/user_tv_first_char"
        app:layout_constraintTop_toTopOf="@+id/user_tv_first_char"/>

    <ImageView
        android:id="@+id/user_img_video_meet"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_2sdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_video"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/user_view_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/user_img_audio_meet"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_4sdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_audio"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/user_view_divider"
        app:layout_constraintEnd_toStartOf="@+id/user_img_video_meet"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/user_tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:ellipsize="end"
        android:fontFamily="@font/ubuntu_medium"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toTopOf="@+id/user_view_supporter"
        app:layout_constraintEnd_toStartOf="@+id/user_img_audio_meet"
        app:layout_constraintStart_toEndOf="@+id/user_tv_first_char"/>
    <TextView
        android:id="@+id/user_tv_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:ellipsize="end"
        android:fontFamily="@font/ubuntu_regular"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@+id/user_view_supporter"
        app:layout_constraintEnd_toStartOf="@+id/user_img_audio_meet"
        app:layout_constraintStart_toEndOf="@+id/user_tv_first_char"/>

    <View
        android:id="@+id/user_view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_tv_first_char"
        app:layout_constraintTop_toBottomOf="@+id/user_tv_first_char"/>


</androidx.constraintlayout.widget.ConstraintLayout>